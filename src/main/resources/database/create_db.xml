<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


	<changeSet author="ssz" id="create_user_tables">
		<createTable tableName="USERACCOUNT">
			<column name="id" type="numeric">
				<constraints primaryKey="true" primaryKeyName="pk_useraccount" />
			</column>
			<column name="login" type="varchar(32)">
				<constraints nullable="false" unique="true" />
			</column>
			<column name="password" type="varchar(256)">
				<constraints nullable="false" />
			</column>
			<column name="first_name" type="varchar(255)" />
			<column name="last_name" type="varchar(255)" />
			<column name="disabled" type="numeric" defaultValueNumeric="0" />
		</createTable>

		<createTable tableName="ROLE">
			<column name="id" type="numeric">
				<constraints primaryKey="true" primaryKeyName="pk_role" />
			</column>
			<column name="role_name" type="varchar(32)">
				<constraints nullable="false" unique="true" />
			</column>
		</createTable>

		<createTable tableName="USERACCOUNT_ROLE">
			<column name="useraccount_id" type="numeric">
				<constraints nullable="false" foreignKeyName="fk_useraccount_id"
					referencedTableName="USERACCOUNT" referencedColumnNames="id" />
			</column>
			<column name="role_id" type="numeric">
				<constraints nullable="false" foreignKeyName="fk_role_id"
					referencedTableName="ROLE" referencedColumnNames="id" />
			</column>
		</createTable>
		<addPrimaryKey constraintName="pk_useraccount_role"
			tableName="USERACCOUNT_ROLE" columnNames="useraccount_id,role_id" />
	</changeSet>

	<changeSet author="ssz" id="create_actionlog_tables">

		<createTable tableName="ACTION">
			<column name="id" type="numeric">
				<constraints primaryKey="true" primaryKeyName="pk_action" />
			</column>
			<column name="name" type="varchar(64)">
				<constraints nullable="false" unique="true" />
			</column>
			<column name="label" type="varchar(64)">
				<constraints nullable="false" unique="true" />
			</column>
		</createTable>

		<createTable tableName="LOG_ACTION">
			<column name="id" type="numeric">
				<constraints primaryKey="true" primaryKeyName="pk_logaction" />
			</column>
			<column name="action_date" type="varchar(32)">
				<constraints nullable="false" />
			</column>
			<column name="action_time" type="varchar(32)">
				<constraints nullable="false" />
			</column>
			<column name="action_id" type="number">
				<constraints foreignKeyName="FK_LOGACTION_ACTION"
					referencedTableName="ACTION" referencedColumnNames="ID" />
			</column>
			<column name="useraccount_id" type="number">
				<constraints foreignKeyName="FK_LOGACTION_USER"
					referencedTableName="USERACCOUNT" referencedColumnNames="ID"  />
			</column>
		</createTable>
	</changeSet>


	<changeSet author="ssz" id="create_sensor_tables">

		<createTable tableName="SENSOR">
			<column name="id" type="numeric">
				<constraints primaryKey="true" primaryKeyName="pk_sensor" />
			</column>
			<column name="uuid" type="varchar(128)">
				<constraints nullable="false" unique="true" />
			</column>
			<column name="name" type="varchar(64)">
				<constraints nullable="false" unique="false" />
			</column>
			<column name="ispublic" type="smallint" defaultValueNumeric="0" />
		</createTable>
	</changeSet>
	<changeSet id="ssz" author="create_user_sequence">
		<createSequence sequenceName="useraccount_seq"
			startValue="10" />
	</changeSet>

</databaseChangeLog>